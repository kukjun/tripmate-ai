# EditorConfig - https://editorconfig.org

# Top-most EditorConfig file
root = true

# ===========================
# Default Settings
# ===========================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# ===========================
# Python
# ===========================
[*.py]
indent_size = 4
max_line_length = 88

# ===========================
# JavaScript/TypeScript
# ===========================
[*.{js,jsx,ts,tsx}]
indent_size = 2

# ===========================
# JSON/YAML
# ===========================
[*.{json,yml,yaml}]
indent_size = 2

# ===========================
# Markdown
# ===========================
[*.md]
trim_trailing_whitespace = false

# ===========================
# Makefile
# ===========================
[Makefile]
indent_style = tab

# ===========================
# Shell Scripts
# ===========================
[*.sh]
indent_size = 2
